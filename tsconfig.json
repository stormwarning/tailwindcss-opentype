{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		// Type Checking
		"strictNullChecks": true,

		// Modules
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"typeRoots": ["./types"],

		// Emit
		"outDir": "dist",

		// JavaScript Support
		"allowJs": true,
		"checkJs": true,

		// Interop Constraints
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		// Language and Environment
		"target": "esnext",

		// Projects
		"incremental": true,

		// Completeness
		"skipLibCheck": true
	},
	"include": [
		"__tests__",
		"docs",
		"src",
		"types",
		".eslintrc.cjs",
		"docs/.eleventy.js",
		"*.config.js"
	],
	"exclude": ["node_modules", "dist"]
}
