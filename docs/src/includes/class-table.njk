{% macro table(classes) %}
<div class="border-b border-grey-200 overflow-hidden relative">
    <span class="sr-only">Default class reference</span>
    <div
        class="overflow-y-auto scrollbar-w-2 scrollbar-track-grey-lighter scrollbar-thumb-rounded scrollbar-thumb-grey scrolling-touch lg:max-h-sm"
    >
        <table class="w-full text-left border-collapse">
            <thead>
                <tr>
                    <th class="z-20 sticky top-0 text-sm font-semibold text-grey-600 bg-white p-0">
                        <div class="pb-2 pr-2 border-b border-grey-200">Class</div>
                    </th>
                    <th class="z-20 sticky top-0 text-sm font-semibold text-grey-600 bg-white p-0">
                        <div class="pb-2 pl-2 border-b border-grey-200">
                            Properties
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody class="align-baseline">
                {% for class, property in classes %}
                <tr>
                    <td
                        class="py-2 pr-2 font-mono text-xs text-violet-600 whitespace-nowrap {{ 'border-t border-grey-200' if loop.index0 !== 0 }}"
                    >
                        {{- class -}}
                    </td>
                    <td class="py-2 pl-2 font-mono text-xs text-light-blue-600 whitespace-pre {{ 'border-t border-grey-200' if loop.index0 !== 0 }}">
                        {{- property -}}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endmacro %}
